<Window x:Class="SQLiteKei.Views.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:localisation="clr-namespace:SQLiteKei.Properties"
        mc:Ignorable="d"
        Title="{x:Static localisation:Resources.WindowTitle_Preferences}"
        Height="200" Width="250"
        ResizeMode="NoResize">
    <DockPanel Margin="6">
        <GroupBox  DockPanel.Dock="Top" Header="{x:Static localisation:Resources.Preferences_GroupBoxHeader_Languages}">
            
        </GroupBox>
        <GroupBox  DockPanel.Dock="Top" Header="{x:Static localisation:Resources.Preferences_GroupBoxHeader_Themes}">

        </GroupBox>
        <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="{x:Static localisation:Resources.ButtonText_Use}" Margin="5 0"/>
            <Button Content="{x:Static localisation:Resources.ButtonText_Cancel}" Margin="5 0" IsCancel="True"/>
        </StackPanel>
    </DockPanel>
</Window>
