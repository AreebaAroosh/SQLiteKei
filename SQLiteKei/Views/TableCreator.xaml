<Window x:Class="SQLiteKei.Views.TableCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="clr-namespace:SQLiteKei.ViewModels.TableCreatorWindow"
        xmlns:cmodel="clr-namespace:SQLiteKei.ViewModels.Common"
        xmlns:localisation="clr-namespace:SQLiteKei.Properties"
        mc:Ignorable="d"
        Title="{x:Static localisation:Resources.WindowTitle_TableCreator}"
        MinHeight="400" MinWidth="500"
        Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Height="25">
            <Label Content="{x:Static localisation:Resources.TableCreator_Label_Database}" />
            <ComboBox x:Name="DatabaseComboBox" Width="150" Height="20" ItemsSource="{Binding Databases}">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="{x:Type cmodel:DatabaseSelectItem}">
                        <TextBlock Text="{Binding DatabaseName}" VerticalAlignment="Center" ToolTip="{Binding DatabasePath}"></TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Label Content="{x:Static localisation:Resources.TableCreator_Label_TableName}" />
            <TextBox Text="{Binding TableName, UpdateSourceTrigger=PropertyChanged}" Width="125" VerticalContentAlignment="Center"/>
        </StackPanel>
        <TabControl Grid.Row="1">
            <TabItem Header="{x:Static localisation:Resources.TableCreator_TabHeader_Columns}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <ItemsControl ItemsSource="{Binding ColumnDefinitions}">
                            <ItemsControl.Resources>
                                <DataTemplate DataType="{x:Type model:ColumnDefinitionItem}">
                                    <DockPanel>
                                        <TextBox Text="{Binding ColumnName, UpdateSourceTrigger=PropertyChanged}" Width="175"/>
                                        <ComboBox SelectedItem="{Binding DataType}" ItemsSource="{Binding DataTypes}" Width="85" VerticalContentAlignment="Center"/>
                                        <Label Content="PK"/>
                                        <CheckBox IsChecked="{Binding IsPrimary}" VerticalAlignment="Center" Margin="3 0"/>
                                        <Label Content="NN"/>
                                        <CheckBox IsChecked="{Binding IsNotNull}" VerticalAlignment="Center" Margin="3 0"/>
                                        <Label Content="{x:Static localisation:Resources.TableCreator_Label_Default}"/>
                                        <TextBox Text="{Binding DefaultValue}" HorizontalAlignment="Stretch"></TextBox>
                                    </DockPanel>
                                </DataTemplate>
                            </ItemsControl.Resources>
                        </ItemsControl>
                        <Button Content="{x:Static localisation:Resources.TableCreator_ButtonText_AddColumn}" Click="AddColumn" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="SQL">
                <TextBox Text="{Binding SqlStatement}" TextWrapping="Wrap"></TextBox>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="3 2" Content="{x:Static localisation:Resources.ButtonText_Create}" 
                    Click="Create" IsEnabled="{Binding IsValidTableDefinition}"/>
            <TextBox Grid.Column="1" Style="{StaticResource SelectableLabelTextBox}" Text="{Binding StatusInfo}"></TextBox>
            <Button Grid.Column="2" Margin="3 2" Content="{x:Static localisation:Resources.ButtonText_Cancel}" IsCancel="True" />
        </Grid>
    </Grid>
</Window>
