<Window x:Name="Window" x:Class="SQLiteKei.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteKei"
        xmlns:Model="clr-namespace:SQLiteKei.ViewModels.DBTreeView" 
        mc:Ignorable="d"
        Title="SQLite Kei" 
        Icon="../Resources/Icons/Logo_32x32.png"
        Width="1024" Height="768" MinWidth="900" MinHeight="700"
        WindowState="Maximized"
        Background="#2D2D30">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Stretch">
            <Menu DockPanel.Dock="Top" Background="#2D2D30" Foreground="#EEEEEE">
                <MenuItem Header="_File" Background="#2D2D30">
                    <MenuItem Header="_New Database" Click="CreateNewDatabase" Background="#2D2D30"/>
                    <MenuItem Header="_Open Database" Click="OpenDatabaseFile" Background="#2D2D30"/>
                    <Separator Background="#2D2D30"/>
                    <MenuItem Header="_Exit" Click="MenuItem_Exit_Click" Background="#2D2D30"/>
                </MenuItem>
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Preferences" Background="#2D2D30"/>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem Header="_Documentation" Background="#2D2D30"/>
                    <MenuItem Header="_About" Click="MenuItem_About_Click" Background="#2D2D30"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <DockPanel Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="Button_NewDatabase" Content="*" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="5, 5, 0, 0" Click="CreateNewDatabase" ToolTip="New Database"/>
            <Button x:Name="Button_OpenDatabase" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="5, 5, 0, 0" Click="OpenDatabaseFile" ToolTip="Open Database"/>
            <Button x:Name="Button_RemoveDatabase" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="5, 5, 0, 0" Click="Button_RemoveDatabase_Click" ToolTip="Remove Database"/>
            <Button x:Name="Button_DeleteDatabase" Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="5, 5, 0, 0" ToolTip="Delete Database"/>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="5, 5, 0, 0" />
            <Button x:Name="Button_CreateQuery" Content="x" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20" Height="20" Margin="5, 5, 0, 0"/>
        </DockPanel>
        <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="75" MaxWidth="250" />
                <ColumnDefinition Width="2" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="#3F3F46">
            <TreeView x:Name="DBTreeView" 
                      Grid.Column="0" 
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                      SelectedItemChanged="DBTreeView_SelectedItemChanged"
                      ItemsSource="{Binding TreeViewItems, ElementName=Window}">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type Model:DatabaseItem}" ItemsSource="{Binding Items}">
                        <TextBlock Text="{Binding Name}" ToolTip="{Binding FilePath}" />
                    </HierarchicalDataTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type Model:FolderItem}" ItemsSource="{Binding Items}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Items.Count}" />
                            <TextBlock Text=")" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <DataTemplate DataType="{x:Type Model:TableItem}">
                        <TextBlock Text="{Binding Path=Name}" />
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type Model:IndexItem}">
                        <TextBlock Text="{Binding Path=Name}" />
                    </DataTemplate>
                </TreeView.Resources>
            </TreeView>
            </Border>
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="#3F3F46"/>
            <TabControl x:Name="MainTabControl" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TabItem Header="General" />
            </TabControl>
        </Grid>
    </Grid>
</Window>